! ------------------------------------------------------------------------------
! ROFI Color theme
! ------------------------------------------------------------------------------
! Use extended color scheme
rofi.font : input mono compressed medium 8
! Use extended color scheme
rofi.color-enabled:                  true
! Color scheme for normal row
rofi.color-normal:                   #1b181b,#C5C8C6,#1b181b,#56bf8b,#1b181b
! Color scheme for urgent row
rofi.color-urgent:                   #1b181b,#C5C8C6,#1b181b,#56bf8b,#1b181b
! Color scheme for active row
rofi.color-active:                   #1b181b,#C5C8C6,#1b181b,#56bf8b,#1b181b
! Color scheme window
rofi.color-window:                   #1b181b,#56bf8b
! Separator style (none, dash, solid)
rofi.separator-style:                solid
rofi.location: 2
rofi.sidebar-mode : true
rofi.lines: 15
rofi.yoffset: 20
rofi.terminal: urxvt

*faceName: Input Mono Compressed Medium
*locale: true
*utf8 : 1
*faceSize: 9
*antialias : true
*renderFont : true
*scrollBar : false
*saveLines: 5000
*background : #1b181b

URxvt*font: xft:Input Mono Compressed:medium:pixelsize=12,xft:Monospace:regular
URxvt.faceSize: 9
URxvt.loginShell : false
