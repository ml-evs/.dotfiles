font pango:Input Mono Medium 5

#..........
# Look
#..........

for_window [class="^.*"] border pixel 2
gaps inner 20
gaps outer 20
bindsym $mod+g gaps inner current set 0 
bindsym Mod4+g gaps outer current set 20 gaps inner current set 20

# Hybrid colors
set $back               #121212
set $background         #B5BD56
set $border             #1B181B
set $black              #282A2E
set $grey               #373B41
set $lightgrey          #707880
set $white              #C5C8C6
set $yellow             #F0C674
set $red                #CC6666
set $darkred            #A54242
set $green              #50956B
set $blue               #17457B

#class                  border      backgr.     text        split
client.focused          $green       $green     $black      
client.focused_inactive $background  $grey      $lightgrey  
client.unfocused        #1B181B       $grey       $lightgrey  
client.urgent           $red        $red        $black      
client.background       $background

#..........
# Applications
#..........

#exec_always --no-startup-id xrandr --output VGA1 --left-of eDP1 --mode 1920x100
exec_always --no-startup-id xmodmap $HOME/.Xmodmap
exec --no-startup-id nitrogen --restore
#exec --no-startup-id start-pulseaudio-x11
exec --no-startup-id ssh-agent
exec --no-startup-id xset -b

# Principal mod key (Super = Win key)
# mod1 = Alt (xmodmap to show)
# mod4 = Winkey (xmodmap to show)
set $mod Mod1

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

bindsym $mod+Shift+Q kill

for_window [class=".*Steam.*"] floating enable
for_window [class=".*plasmashell.*"] floating enable
for_window [title=".*Mendeley.*"] move container to workspace 5:doc
for_window [title=".*Figure.*"] floating enable
for_window [class="XMGrace"] floating enable
for_window [class="krunner"] floating enable
for_window [class="Gnuplot_qt"] floating enable
for_window [title="Terminator Preferences"] floating enable
for_window [title=".*VMD.*"] floating enable
for_window [title=".*PyMOL.*"] floating enable
for_window [class="vlc"] floating enable
for_window [class="Tk"] floating enable
for_window [class="I3-exit"] floating enable
for_window [class="Xfce4-notifyd"] floating enable
for_window [class="Eog"] floating enable
for_window [title=".*idget.*"] floating enable

# start a terminal
bindsym $mod+Return exec gnome-terminal
bindsym Mod4+w exec google-chrome

# Layout

# change focus
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+h focus left

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+J move down
bindsym $mod+Shift+K move up
bindsym $mod+Shift+L move right
bindsym $mod+Shift+H move left

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+] split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# change container layout (stacked, tabbed, default)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout default

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

#...........
# Keybinds i3
#...........


# switch to workspace
bindsym $mod+1 workspace 1:dev
bindsym $mod+2 workspace 2:rem
bindsym $mod+3 workspace 3:www
bindsym $mod+4 workspace 4:wri
bindsym $mod+5 workspace 5:doc
bindsym $mod+6 workspace 6:dae
bindsym $mod+7 workspace 7:scr
bindsym $mod+8 workspace 8:vis
bindsym $mod+9 workspace 9:mus


# move focused container to workspace
bindsym $mod+Shift+1 move workspace 1:dev
bindsym $mod+Shift+2 move workspace 2:rem
bindsym $mod+Shift+3 move workspace 3:www
bindsym $mod+Shift+4 move workspace 4:wri
bindsym $mod+Shift+5 move workspace 5:doc
bindsym $mod+Shift+6 move workspace 6:dae
bindsym $mod+Shift+7 move workspace 7:scr
bindsym $mod+Shift+8 move workspace 8:vis
bindsym $mod+Shift+9 move workspace 9:mus

assign [title=".*VMD.*"] 8:vis
assign [title="bar"] 1:dev
assign [class="VESTA"] 8:vis
assign [class=".*jmol.*"] 8:vis
assign [title=".*PyMOL.*"] 8:vis
assign [class=".*Gimp*."] 8:vis
assign [class="XMGrace"] 8:vis
assign [class="Vlc"] 9:mus

bindsym Mod4+Left move workspace to output left
bindsym Mod4+h move workspace to output left
bindsym Mod4+Right move workspace to output right
bindsym Mod4+l move workspace to output right

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+R restart
# exit i3 (logs you out of your X session)
#bindsym $mod+Shift+E exit

mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # They resize the border in the direction you pressed, e.g.
        # when pressing left, the window is resized so that it has
bindsym j resize grow down 10 px or 10 ppt
bindsym k resize grow up 10 px or 10 ppt
bindsym l resize grow right 10 px or 10 ppt
bindsym h resize grow left 10 px or 10 ppt

# same bindings, but for the arrow keys
bindsym Left resize grow left 10 px or 10 ppt
bindsym Down resize grow down 10 px or 10 ppt
bindsym Up resize grow up 10 px or 10 ppt
bindsym Right resize grow right 10 px or 10 ppt

# back to normal: Enter or Escape
bindsym Return mode "default"
bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

